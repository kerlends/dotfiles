alias aliases="vim $FISH_DIR/aliases.fish; and source $FISH_DIR/aliases.fish"

alias fsrc="source $FISH_DIR/config.fish"
alias fconf="vim $FISH_DIR/config.fish; and fsrc"

alias cra="create-react-app"
alias cra-ts="create-react-app --scripts-version=react-scripts-ts"

alias tmc="vim $HOME/.tmux.conf"

alias vfa="vf activate"
alias vfd="vf deactivate"
alias vfn="vf new -p python3"
alias vfl="vf ls"
alias vfr="vf rm"

alias ygad="yarn global add"
alias yad="yarn add"
alias yadd="yarn add --dev"

alias svim="sudo vim"
